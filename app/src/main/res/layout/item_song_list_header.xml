<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_large"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/songNameTextView"
        android:layout_width="@dimen/flexible_component"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_marginHorizontal="@dimen/margin_normal"
        android:text="@string/title_song_name"
        style="@style/TextAppearance.Material3.LabelLarge"/>

    <TextView
        android:id="@+id/songDurationTextView"
        android:layout_width="@dimen/flexible_component"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:text="@string/title_song_duration"
        style="@style/TextAppearance.Material3.LabelLarge"/>

    <TextView
        android:id="@+id/songArtistTextView"
        android:layout_width="@dimen/flexible_component"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginEnd="@dimen/margin_normal"
        android:text="@string/title_song_artist"
        style="@style/TextAppearance.Material3.LabelLarge"/>

</LinearLayout>