<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorOnPrimary"
    android:orientation="vertical">

    <TextView
        android:id="@+id/songTitleTextView"
        android:layout_width="@dimen/flexible_component"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="Life is a Highway"
        android:layout_marginTop="@dimen/title_padding_top"
        android:padding="@dimen/margin_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextAppearance.Material3.HeadlineLarge"/>

    <TextView
        android:id="@+id/songArtistTextView"
        android:layout_width="@dimen/flexible_component"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_large"
        android:padding="@dimen/margin_large"
        android:gravity="center"
        tools:text="Rascal Flatts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/songTitleTextView"
        style="@style/TextAppearance.AppCompat.Medium"/>

    <LinearLayout
        android:id="@+id/controllerPanelView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_xlarge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/previousSongButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/skip_previous"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:background="?android:selectableItemBackground"/>

        <ImageButton
            android:id="@+id/playPauseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:src="@drawable/pause"
            android:background="?android:selectableItemBackground" />

        <ImageButton
            android:id="@+id/nextSongButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/skip_next"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:background="?android:selectableItemBackground"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>